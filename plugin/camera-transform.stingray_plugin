// Extensions
//
extensions = {

    // Define the Camera transform viewer view.
    views = [
        { type = "panel" name = "camera-transform" path = "camera-transform" title = "Camera Transform" width = 725 height = 800 }
    ]

    // Define a menu item that will open the Camera Transform.
    menus = [
        { path = "Window/Camera Transform" view = "camera-transform" order = 359 shortcut="Ctrl+F11" }
    ]

    // Load the engine extension in the editor engine instance.
    runtime_libraries = [
        {
            name = "camera_transform"
            paths = {
                win32 = {
                    dev = "binaries/engine/win64/dev/engine_plugin_w64_dev.dll"
                    debug = "binaries/engine/win64/debug/engine_plugin_w64_debug.dll"
                    release = "binaries/engine/win64/release/engine_plugin_w64_release.dll"
                }
            }
        }
    ]
}

